{
  "name": "mern-login",
  "version": "0.0.1",
  "description": "interview assignment",
  "main": "index.js",
  "scripts": {
    "server": "nodemon",
    "client": "npm run dev --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build:server": "tsc --build tsconfig.server.json",
    "build:client": "npm run build --prefix client",
    "start": "NODE_ENV=production node server/dist/server/index.js",
    "build": "npm-run-all build:*",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build"
  },
  "author": "Bhavya Tomar",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-session": "^1.4.0",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "mongoose": "^5.12.8",
    "npm-run-all": "^4.1.5",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-session": "^2.0.42",
    "@types/express": "^4.17.11",
    "@types/mongoose": "^5.10.5",
    "@types/node": "^15.0.2",
    "@types/passport": "^1.0.6",
    "@types/passport-local": "^1.0.33",
    "concurrently": "^6.1.0",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
